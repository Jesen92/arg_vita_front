<div class="prdt" style="padding-top: 10px">
  <div class="container">
    <div class="page-header head-page">
      <h2>Uredi <%= resource_name.to_s.humanize %></h2>
    </div>
<div style="margin: 30px 30px 30px 30px;" >
<%= simple_form_for(resource, as: resource_name, html: { class: 'form-horizontal', method: :put }, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <%= f.input :name, autofocus: true %>

      <%= f.input :date_of_birth, :as => :date, start_year: Date.today.year - 100, end_year: Date.today.year %>


      <div class="form-group">
        <label>Država</label>
        <%= country_select("user", "state", {priority_countries: ["HR"]}, { class: 'form-control', data: { attribute: "value" } })  %>
      </div>

      <%= f.input :address, autofocus: true %>

      <%= f.input :city, autofocus: true %>

      <%= f.input :postcode, autofocus: true %>

      <%= f.input :phone, autofocus: true %>


      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <i>(leave blank if you don't want to change it)</i><br />
    <%= f.input :password, autocomplete: "off" %>
  </div>

  <div class="field">

    <%= f.input :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <i>(we need your current password to confirm your changes)</i><br />
    <%= f.input :current_password, autocomplete: "off" %>
  </div>

      <%= f.input :articles_newsletter, label: 'Želim primati newsletter o artiklima!' %>
      <%= f.input :raw_articles_newsletter, label: 'Želim primati newsletter o repromaterijalu!' %>

  <div class="actions">
    <%= f.button :submit, "Ažuriraj", class:"btn btn-success" %>
  </div>
<% end %>


<%= link_to "Back", accounts_my_account_path %>
</div>
  </div>
</div>