<div class="prdt" style="padding-top: 10px">
  <div class="container">
    <div class="page-header head-page">
      <h2>Registracija</h2>
    </div>
      <div style="margin: 30px 30px 30px 30px;" >
<%= simple_form_for(resource, html: { class: 'form-horizontal' }, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <%= f.input :name, label: 'Ime i prezime' ,autofocus: true %>

      <%= f.input :date_of_birth, label: 'Datum rođenja', :as => :date, start_year: Date.today.year - 100, end_year: Date.today.year %>

      <div class="form-group">
        <label>Država</label>
          <%= country_select("user", "state", {priority_countries: ["HR"]}, { class: 'form-control', data: { attribute: "value" } })  %>
      </div>

            <div class="row">
              <div class="col-md-4 margin-right-form">
                <%= f.input :city, label: 'Grad', autofocus: true %>
              </div>
              <div class="col-md-4 margin-right-form">
                <%= f.input :address, label: 'Adresa', autofocus: true %>
              </div>
              <div class="col-md-4 margin-right-form">
                <%= f.input :postcode, label: 'Poštanski broj', autofocus: true %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 margin-right-form">
                <%= f.input :email, autofocus: true %>
              </div>
              <div class="col-md-6 margin-right-form">
                <%= f.input :phone, label: 'Broj mobitela/telefona', autofocus: true %>
              </div>
            </div>

    <%= f.input :password, label: 'Lozinka', autocomplete: "off" %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
    <%= f.input :password_confirmation, label: 'Ponovite lozinku', autocomplete: "off" %>
            <hr>
            <%= recaptcha_tags callback: 'enableBtnRegister' %>
  <div class="actions">
    <%= f.button :submit, "Registriraj se", class:"btn btn-success", id: "registration_form_submit_button_", style: "background-color: #1abc9c;"  %>
  </div>

<% end %>
        <%= link_to "Već ste registrirani? Prijavite se", new_user_session_path %><br />
        <%= render "devise/shared/links" %>
</div>
  </div>
</div>

<script>

    document.getElementById("registration_form_submit_button_").disabled = true;

    function enableBtnRegister(){
        document.getElementById("registration_form_submit_button_").disabled = false;
    }
</script>