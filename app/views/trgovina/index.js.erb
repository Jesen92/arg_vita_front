
<% js = escape_javascript(
  render(partial: 'trgovina/show_pics', locals: { articles: @articles })
) %>

if(typeof append_or_html === 'undefined' || append_or_html === null || append_or_html != 1){
    $("#filterrific_results").html("<%= js %>");
    window.scrollTo(0, 500);
}else{
    $("#filterrific_results").append("<%= js %>");
    append_or_html = 0;
}

// Update pagination link
<% if @articles.last_page? %>
$('.pagination').html("");
<% else %>
$('.pagination')
    .html("<hr><%=j link_to_next_page(@articles, 'Next', :remote => true,id: "next_page_infinite", class: "btn btn-default next_page_button", style: "width: 100%;", onclick: "append_to_next();") %>");
<% end %>


$('[data-countdown]').each(function () {
    var $this = $(this), finalDate = $(this).data('countdown');
    $this.countdown(finalDate, function (event) {
        $this.html(event.strftime('%D dana %H:%M:%S'));
    });
});

jQuery(function() {
    var categories, material, options;
    categories = $('#filterrific_with_ssubcategory_id').html();
    material = $('#filterrific_with_subcategory_id :selected').text();

    if (material === "- Sve -") {
        $('#filterrific_with_ssubcategory_id').empty();
        $('#filterrific_with_ssubcategory_id').trigger("chosen:updated");

    } else {
        options = $(categories).filter("optgroup[label='" + material + "']").html();
        $('#filterrific_with_ssubcategory_id').html(options);
        $('#filterrific_with_ssubcategory_id').trigger("chosen:updated");

    }
});

